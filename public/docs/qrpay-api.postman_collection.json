{
  "info": {
    "name": "QRPay API Collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Sample requests covering authentication, payments, exchange, and withdrawals for the QRPay platform."
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/auth/login",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "auth",
                "login"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"client_id\": \"{{client_id}}\",\n  \"client_secret\": \"{{client_secret}}\"\n}"
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Payments",
      "item": [
        {
          "name": "Create payment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/payments",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "payments"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 1000,\n  \"currency\": \"USD\",\n  \"customer_reference\": \"ORDER-10001\"\n}"
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Exchange",
      "item": [
        {
          "name": "Quote",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/exchange/quote",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "exchange",
                "quote"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"from_currency\": \"USD\",\n  \"to_currency\": \"EUR\",\n  \"amount\": 25\n}"
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Withdrawals",
      "item": [
        {
          "name": "Create withdrawal",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/withdrawals",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "withdrawals"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 200,\n  \"currency\": \"USD\",\n  \"destination\": {\n    \"type\": \"bank_account\",\n    \"account_number\": \"0123456789\",\n    \"routing_number\": \"000000000\"\n  }\n}"
            }
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "https://sandbox.qrpay.test"
    },
    {
      "key": "client_id",
      "value": ""
    },
    {
      "key": "client_secret",
      "value": ""
    },
    {
      "key": "access_token",
      "value": ""
    }
  ]
}
