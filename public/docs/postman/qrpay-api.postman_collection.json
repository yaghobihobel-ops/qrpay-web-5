{
  "info": {
    "name": "QRPay API v1",
    "description": "Postman collection for the QRPay public API (v1.0.0).",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "item": [
    {
      "name": "Generate Access Token",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/v1/auth/token",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "v1",
            "auth",
            "token"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"clientId\": \"{{clientId}}\",\n  \"clientSecret\": \"{{clientSecret}}\",\n  \"scope\": \"payments:write payments:read\"\n}"
        }
      },
      "response": []
    },
    {
      "name": "Create Payment",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/v1/payments",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "v1",
            "payments"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"amount\": 99.5,\n  \"currency\": \"USD\",\n  \"referenceId\": \"INV-48291\",\n  \"customer\": {\n    \"name\": \"Jane Doe\",\n    \"email\": \"jane@example.com\"\n  }\n}"
        }
      },
      "response": []
    },
    {
      "name": "Get Payment Status",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/v1/payments/{{paymentId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "v1",
            "payments",
            "{{paymentId}}"
          ]
        }
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://sandbox-api.qrpay.test"
    },
    {
      "key": "clientId",
      "value": ""
    },
    {
      "key": "clientSecret",
      "value": ""
    },
    {
      "key": "accessToken",
      "value": ""
    },
    {
      "key": "paymentId",
      "value": ""
    }
  ]
}
